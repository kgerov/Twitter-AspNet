<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/Custom/Navbar.css")
</head>
<body>
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <div class="navbar-brand"><a href="/"><img src="~/Images/bird_logo_blue.png" alt="Logo" /></a></div>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    @Html.Partial("_LoginPartialLeftSide")
                </ul>
                @Html.Partial("_LoginPartial")
                <form class="navbar-form navbar-right" id="searchForm" role="search" method="post" action="@Url.Action("Search", "Home")">
                    <div class="form-group">
                        <input type="text" class="form-control" placeholder="Search Twitter">
                    </div>
                    <a href="#" id="searchFormBtn"><img src="~/Images/search_icon.png" alt="Search"/></a>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/Scripts/Custom/SearchScript.js")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
